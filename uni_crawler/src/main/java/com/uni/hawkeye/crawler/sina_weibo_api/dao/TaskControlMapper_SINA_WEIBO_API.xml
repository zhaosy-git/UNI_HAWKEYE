<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.uni.hawkeye.crawler.sina_weibo_api.dao.TaskControlMapper_SINA_WEIBO_API">

	<select id="selectMaxTaskControl" resultType="com.uni.hawkeye.crawler.sina_weibo_api.bean.TaskControl">
		SELECT
			execute_id,
			site_code,
			status,
			ctime,
			mtime
		FROM
			crawler_control
		where site_code = #{siteCode, jdbcType=CHAR}
		ORDER BY
			execute_id DESC
		LIMIT 1
	</select>

	<insert id="insertTaskControl" parameterType="com.uni.hawkeye.crawler.sina_weibo_api.bean.TaskControl">
	
		<selectKey resultType="java.lang.Integer" keyProperty="execute_id"
			order="AFTER">
			SELECT @@IDENTITY
		</selectKey>
	
		INSERT INTO crawler_control
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="site_code != null">
				site_code,
			</if>
			<if test="status != null">
				status,
			</if>
			ctime,
			mtime
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="site_code != null">
				#{site_code,jdbcType=CHAR},
			</if>
			<if test="status != null">
				#{status,jdbcType=CHAR},
			</if>
			now(),
			now()
		</trim>
	</insert>

	<update id="updateByPrimaryKeySelective" parameterType="com.uni.hawkeye.crawler.sina_weibo_api.bean.TaskControl">
		update crawler_control
		<set>
			<if test="status != null">
				status = #{status,jdbcType=CHAR},
			</if>
			mtime = now()
		</set>
		where execute_id = #{execute_id,jdbcType=INTEGER}
	</update>
</mapper>